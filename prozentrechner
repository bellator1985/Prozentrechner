<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Prozentuale Differenz Rechner</title>
    <!-- Tailwind CSS über CDN laden -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Konfiguration für das Inter-Schriftart und responsive Design -->
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap');
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f7f9fb;
        }
        .result-box {
            transition: all 0.3s ease-in-out;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body class="flex items-center justify-center min-h-screen p-4">

    <div class="w-full max-w-lg bg-white p-6 md:p-10 rounded-xl shadow-2xl border border-gray-100">
        <h1 class="text-3xl font-bold text-gray-800 mb-6 text-center">
            Prozentuale Differenz Rechner
        </h1>
        <p class="text-sm text-gray-500 mb-8 text-center">
            Berechnet die prozentuale Veränderung von **Zahl 1** zu **Zahl 2**.
        </p>

        <!-- Eingabefelder -->
        <div class="space-y-6">
            <div>
                <label for="number1" class="block text-sm font-medium text-gray-700 mb-1">Zahl 1 (Basiswert)</label>
                <input type="number" id="number1" placeholder="z.B. 32430562"
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 transition duration-150"
                       oninput="calculateDifference()">
            </div>
            <div>
                <label for="number2" class="block text-sm font-medium text-gray-700 mb-1">Zahl 2 (Vergleichswert)</label>
                <input type="number" id="number2" placeholder="z.B. 11824282"
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 transition duration-150"
                       oninput="calculateDifference()">
            </div>
        </div>

        <!-- Ergebnisbereich -->
        <div class="mt-8">
            <h2 class="text-xl font-semibold text-gray-700 mb-4">Ergebnis</h2>
            <div id="result" class="result-box text-center p-6 rounded-lg bg-gray-50 border border-gray-200 min-h-[80px] flex flex-col justify-center">
                <p class="text-gray-500 italic">Geben Sie beide Zahlen ein, um das Ergebnis zu sehen.</p>
            </div>
        </div>
    </div>

    <script>
        /**
         * Berechnet die prozentuale Differenz zwischen Zahl 1 und Zahl 2.
         * Formel: ((Zahl 2 - Zahl 1) / Zahl 1) * 100
         */
        function calculateDifference() {
            const num1Input = document.getElementById('number1');
            const num2Input = document.getElementById('number2');
            const resultDiv = document.getElementById('result');

            // Versuchen, die Eingabewerte als Gleitkommazahlen zu parsen
            const num1 = parseFloat(num1Input.value);
            const num2 = parseFloat(num2Input.value);

            // Überprüfen, ob beide Eingaben gültige Zahlen sind
            if (isNaN(num1) || isNaN(num2) || num1Input.value.trim() === '' || num2Input.value.trim() === '') {
                resultDiv.innerHTML = '<p class="text-gray-500 italic">Geben Sie beide Zahlen ein, um das Ergebnis zu sehen.</p>';
                resultDiv.className = 'result-box text-center p-6 rounded-lg bg-gray-50 border border-gray-200 min-h-[80px] flex flex-col justify-center';
                return;
            }

            // Spezialfall: Division durch Null
            if (num1 === 0) {
                // Wenn Basiswert 0 ist, ist die prozentuale Veränderung mathematisch undefiniert
                resultDiv.innerHTML = '<p class="text-red-600 font-bold">Fehler: Zahl 1 (Basiswert) darf nicht Null sein, um die prozentuale Differenz zu berechnen.</p>';
                resultDiv.className = 'result-box text-center p-6 rounded-lg bg-red-100 border border-red-300 min-h-[80px] flex flex-col justify-center';
                return;
            }

            // Berechnung der prozentualen Differenz
            // diff = ( (Zahl 2 - Zahl 1) / Zahl 1 ) * 100
            const difference = ((num2 - num1) / num1) * 100;

            // Runden auf zwei Dezimalstellen
            const roundedDifference = difference.toFixed(2);

            // Bestimmen der Farbe und des Vorzeichens
            let sign = '';
            let colorClass = 'text-gray-700 bg-gray-100 border-gray-300'; // Standard
            let prefix = '';

            if (difference > 0) {
                sign = '+';
                colorClass = 'text-green-700 bg-green-100 border-green-300'; // Positiv = Grün
                prefix = 'Zunahme von';
            } else if (difference < 0) {
                sign = '-';
                colorClass = 'text-red-700 bg-red-100 border-red-300'; // Negativ = Rot
                prefix = 'Abnahme von';
            } else {
                prefix = 'Keine Veränderung';
            }

            // Erstellen des Ergebnis-HTML
            const resultHtml = `
                <p class="text-sm font-medium mb-1 ${difference !== 0 ? 'hidden md:block' : ''}">${prefix} (von ${num1.toLocaleString('de-DE')} auf ${num2.toLocaleString('de-DE')})</p>
                <div class="flex items-center justify-center space-x-2">
                    <span class="text-4xl font-extrabold">
                        ${sign}${Math.abs(roundedDifference).toLocaleString('de-DE')}
                    </span>
                    <span class="text-3xl font-bold">%</span>
                </div>
            `;

            // Aktualisieren des Ergebnis-Divs
            resultDiv.innerHTML = resultHtml;
            // Aktualisieren der Klassen für das visuelle Feedback
            resultDiv.className = `result-box text-center p-6 rounded-lg ${colorClass} border min-h-[80px] flex flex-col justify-center`;
        }

        // Führt die Berechnung beim Laden der Seite einmal aus, falls bereits Werte vorhanden sind (obwohl sie leer sein sollten)
        window.onload = calculateDifference;
    </script>
</body>
</html>
